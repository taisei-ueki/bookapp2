<div class="flash"><%= notice %></div>
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
<%= render 'list', user:@user, book:@book %>
</div>
<div class="col-md-8 offset-md-1">
  
<h1>Books</h1>

<table>
  <thead>
  <tr>
    <th></th>
    <th>Title</th>
    <th>Opinion</th>
    <th colspan="3"></th>
  </tr>
  </thead>
 <% @books.each do |book| %>
  <tr>
    <td><%= link_to user_path(book.user.id) do %>
    <%= image_tag book.user.get_profile_image %>
    <% end %></td>
    <td>
    <%= link_to book_path(book.id) do %>
    <%= book.title %> 
    <% end %>
    </td>
    <td><%= book.body %></td>
    
  </tr>
<% end %> 
</table>
</div>
</div>
</div>
